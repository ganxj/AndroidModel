<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="home"
            type="com.gange.packagegroup.model.HomeModel" />
        <variable
            name="head"
            type="com.gange.component.head.HeadMp"/>

        <variable
            name="menu"
            type="com.gange.component.menu.MenuMp"/>

        <variable
            name="normalBanner"
            type="com.gange.component.middleBanner.MiddleBannerMp"/>
        <variable
            name="banner"
            type="com.gange.component.middleBanner.MiddleBannerMp"/>
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/component_head_view"
            bind:head="@{head}"/>

        <include layout="@layout/component_normal_banner_view"
            bind:normalBanner="@{normalBanner}"/>

        <include layout="@layout/component_menu_view"
            bind:menu="@{menu}"/>

        <include layout="@layout/component_middle_banner_view"
            bind:banner="@{banner}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哈哈哈"/>

    </LinearLayout>
</layout>